<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>DV_KnuckleDusters</defName>
    <label>knuckle dusters</label>
    <description>A crown-like headpiece with stubby spikes that poke the head uncomfortably. It is used to put the wearer in pain.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
        <li Class="HediffCompProperties_VerbGiver">
            <tools>
                <li>
                  <label>knuckles</label>
                  <capacities>
                    <li>Blunt</li>
                  </capacities>
                  <power>10</power>
                  <soundMeleeHit>MeleeHit_Metal_Blunt</soundMeleeHit>
                  <cooldownTime>1.9</cooldownTime>
                </li>
            </tools>
        </li>  
      <li Class="HediffCompProperties_RemoveIfApparelDropped" />
    </comps>
    <addedPartProps>
        <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <isBad>false</isBad>
  </HediffDef>
  
</Defs>