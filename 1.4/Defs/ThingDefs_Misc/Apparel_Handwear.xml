<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="ApparelMakeableBase">
		<defName>DV_Handwear_KnuckleDusters</defName>
		<label>knuckle dusters</label>
		<description>A pair of metal knuckle dusters. They concentrate the force of a punch into a smaller area, which results in more damage.</description>
		<smeltable>true</smeltable>
		<burnableByRecipe>true</burnableByRecipe>
		<thingCategories>
			<li>ApparelUtility</li>
		  </thingCategories>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Handwear/KnuckleDusters</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.02</generateCommonality>
		<stuffCategories>
            <li>Metallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<statBases>
			<MaxHitPoints>125</MaxHitPoints>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.5</Mass>
            <EquipDelay>1.2</EquipDelay>
		</statBases>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
        <comps>
            <li Class="CompProperties_CauseHediff_Apparel">
              <hediff>DV_KnuckleDusters</hediff>
              <part>Head</part>
            </li>
          </comps>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
				  <li>Root</li>
				</categories>
				<disallowedThingDefs>
				  <li>Jade</li>
				</disallowedThingDefs>
			  </defaultIngredientFilter>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

</Defs>